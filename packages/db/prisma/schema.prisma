generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Post {
    id      String @id @default(cuid())
    title   String
    content String
}

model Workout {
    id          String @id @default(cuid())
    name        String
    description String?
    exercises   Exercise[]
    userId      String
}

model Exercise {
    id          String @id @default(cuid())
    name        String
    description String?
    workout     Workout @relation(fields: [workoutId], references: [id])
    workoutId   String
}
